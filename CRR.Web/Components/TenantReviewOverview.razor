@using CRR.Models

<div class="card p-3 my-1 shadow-sm">
    <div class="card-title">
        <strong>@Review.TenantName</strong>
    </div>
    <div class="card-subtitle">
        <div class="row">
            <div class="col-md-9">
                <small class="text-muted">@Review.Property.Address, @Review.Property.City, @Review.Property.State, @Review.Property.Country</small>
            </div>
            <div class="d-flex justify-content-end col-md-3">
                <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#viewDetails"><small><i>View Details</i></small></button>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="container d-flex justify-content-center align-items-center">
            <div class="card border-0 p-3">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                        <div class="ratings">
                        @for (int i = 1; i < 6; i++)
                        {
                            if(i <= Math.Round(Review.Ratings.Average(r => r.Value), 0, MidpointRounding.ToPositiveInfinity))
                            {
                                <i class="fa fa-star rating-color"></i>
                            }
                            else
                            {
                                <i class="fa fa-star"></i>
                            }
                        }
                    </div>
                        <h5 class="review-count">@Math.Round(Review.Ratings.Average(r => r.Value), 0, MidpointRounding.ToPositiveInfinity) stars</h5>
                    </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade py-3" role="dialog" tabindex="-1" id="viewDetails" aria-hidden="true" aria-labelledby="viewDetailsTitle">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content rounded-3 shadow">
                <div class="modal-header border-bottom-0">
                    <h5 class="modal-title" id="viewDetailsTitle">@Review.TenantName</h5>
					<button class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body p-5 pt-1">
                    <hr/>
                    <h6>Overview</h6>
                    <div class="height-100 container d-flex justify-content-center align-items-center">
                        <div class="card border-0 p-3">
                            <div class="d-flex mb-4 justify-content-between align-items-center">
                                <div class="ratings">
                                @for (int i = 1; i < 6; i++)
                                {
                                    if(i <= Math.Round(Review.Ratings.Average(r => r.Value), 0, MidpointRounding.ToPositiveInfinity))
                                    {
                                        <i class="fa fa-star rating-color"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-star"></i>
                                    }
                                }
                            </div>
                                <h5 class="review-count">@Math.Round(Review.Ratings.Average(r => r.Value), 0, MidpointRounding.ToPositiveInfinity) stars</h5>
                            </div>
                            
                        @foreach (var rating in Review.Ratings)
                        {
                            <div class="mt-1 d-flex justify-content-between align-items-center">
                                <h5 class="review-stat">@rating.Description</h5>
                                <div class="small-ratings">
                                    @for (int i = 1; i < 6; i++)
                                    {
                                        if(i <= rating.Value)
                                        {
                                            <i class="fa fa-star rating-color"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-star"></i>
                                        }
                                    }
                                </div>
                            </div>
                        }

                        </div>
                    </div>
                    <hr/>
                    <h6>Details</h6>
                    <p>
                        these are details
                    </p>
                    
                    <hr/>
                    <h6>Attachments</h6>

                    <div class="row">
                        <div class="col-4">
                            <button class="btn btn-sm btn-outline-secondary">Contract.pdf</button>
                        </div>
                        <div class="col-4">
                            <button class="btn btn-sm btn-outline-secondary">Damage.pdf</button>
                        </div>
                        <div class="col-4">
                            <button class="btn btn-sm btn-outline-secondary">Misc.pdf</button>
                        </div>
                    </div>

                    <hr/>
                    <div class="card">
                        <div class="card-header">
                          About Reviewer
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Gerard</h5>
                            <p class="card-text">
                                Hello this is gerard
                            </p>
                            <div class="d-flex justify-content-end">
                                <a href="#" class="btn btn-outline-primary btn-sm">View Profile</a>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-end text-muted">
                          <small>Posted on @Review.Date.ToShortDateString()</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@code {
    [Parameter]
    public TenantReview Review { get; set; }

}
