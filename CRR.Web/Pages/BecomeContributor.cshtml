@page
@model CRR.Web.Pages.BecomeContributorModel
@{
}


<div class="container my-3">
  <div class="p-5 alert-success border rounded-3 mb-2">
    <h4 class="h-5">Become a contributor!</h4>
    <p>Becoming a contributor allows you to register your rental appartments or other properties
        in Central Rent Register's database after which you to write public reviews related to your
        tenents and contribute towards betterment of your community.
    </p>
  
  </div>
    <div class="card p-3">
        <div class="class-title">
            <h5>Fill out the form</h5>
        </div>
        <hr>
        <div class="card-body">
            <p>Please provide following information to start contributing...</p>
            
            <form>
                <div class="mb-3">
                    <label for="addressInput" class="form-label">Permanent address</label>
                    <input type="text" class="form-control" id="addressInput" required aria-describedby="addressHelp">
                    <div id="addressHelp" class="form-text">We'll never share your address with anyone else.</div>
                </div>
                <div class="mb-3">
                    <label for="aboutInput" class="form-label">About</label>
                    <textarea class="form-control" id="aboutInput" aria-describedby="aboutHelp"></textarea>
                    <div id="aboutHelp" class="form-text">Tell us about yourself</div>
                </div>
                <div class="form-check m-2">
                  <input class="form-check-input" type="checkbox" value="" id="invalidCheck3" required>
                  <label class="form-check-label" for="invalidCheck3">
                    I agree to terms and conditions
                  </label>
                  <div class="invalid-feedback">
                    You must agree before submitting.
                  </div>
                </div>
                <div class="d-flex justify-content-end">
                    <a class="btn btn-sm btn-warning" asp-page="/AddProperties">Become contributor</a>
                </div>
            </form>
        </div>
    </div>
</div>